
class FruitSeller {
	int numofapple;
	int mymoney;
	
	//持失切五社球
	FruitSeller(){
		numofapple=20;
		mymoney = 0;
	}
	
	public int SaleApple(int money){
		int num = money/1000;
		numofapple -= num;
		mymoney += money;
		
		return num;
	}

}


public class FruitSellerDri{
	public static void main(String[] args) {
		FruitSeller fs = new FruitSeller();
		
		fs.SaleApple(10000);
	}
}
